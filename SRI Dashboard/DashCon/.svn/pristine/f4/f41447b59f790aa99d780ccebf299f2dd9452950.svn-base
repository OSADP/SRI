
/*
 * @author		Robert Roth
 * 
 * @descripion	Initialize our Application by creating the parent
 * module 'app', injecting dependencies and defining our controllers.
 * 
 * @dependency	sri.config.UserRouter(./config/UserRouteConfig.js)
 * 				sri.directive.Notifyr(./directives/Notifyr.js)
 * 				sri.factory.User(./services/UserFactory.js)
 * 
 * @controllers	sri.controller.ListUsers(./controllers/CreateUserCTRL.js)
 * 				sri.controller.EdutUser(./controllers/EditUserCTRL.js)
 * 				sri.controller.CreateUser(./controllers/CreateUserCTRL.js)
 */		

angular.module('ADMIN', [
     // Routes
     'sri.config.UserRouter',
     // Directives
     'sri.directive.Notifyr',
     // Services
     'sri.factory.User'
     ])
 	// Define our controllers for the Navigation component
 	.controller('sri.NavigationCTRL', ['$scope', '$state', '$location', sri.controller.Navigation])
	// Define our controllers for the User component
	.controller('sri.ListUsersCTRL', ['$scope', 'User', '$state', 'users', sri.controller.ListUsers])
	.controller('sri.EditUserCTRL', ['$scope', 'User', 'user', sri.controller.EditUser])
	.controller('sri.CreateUserCTRL', ['$scope', 'User', 'stateList', sri.controller.CreateUser])
	
angular.module('ADMIN_SITES', ['sri.config.SiteRouter', 'sri.directive.Notifyr', 'sri.factory.Site'])
	// Define our controllers for the Navigation component
	.controller('sri.NavigationCTRL', ['$scope', '$state', '$location', sri.controller.Navigation])
	// Define our controllers for the Site component
	.controller('sri.ListSitesCTRL', ['$scope', 'Site', '$state', 'sites', sri.controller.ListSites])
	.controller('sri.EditSiteCTRL', ['$scope', 'Site', 'site', sri.controller.EditSite])
	.controller('sri.CreateSiteCTRL', ['$scope', 'Site', 'stateList', 'siteTypes', sri.controller.CreateSite])





