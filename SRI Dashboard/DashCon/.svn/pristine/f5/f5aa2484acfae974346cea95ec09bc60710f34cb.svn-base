package sri.data.dao;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;

import sri.data.Vendor;

public class VendorDaoImpl implements VendorDao{
	
	private SqlSessionFactory sqlMapper = MyBatisConnectionFactory.getSqlSessionFactory();
	private SqlSession session = sqlMapper.openSession(true);

	@Override
	public List<Vendor> getAllVendors() {
		List<Vendor> vendors = null;
		try{
			vendors = session.selectList("sri.VendorMapper.getAllVendors");
		} finally {
			session.close();
		}
		return vendors;
	}

	@Override
	public Vendor getVendorByName(String vendorName) {
		Vendor vendor = null;
		try{
			vendor = session.selectOne("sri.VendorMapper.getVendorByName", vendorName);
		} finally {
			session.close();
		}
		return vendor;
	}

	@Override
	public Vendor getVendorById(String Id) {
		Vendor vendor = null;
		try{
			vendor = session.selectOne("sri.VendorMapper.getVendorById", Id);
		} finally {
			session.close();
		}
		return vendor;
	}

	

}
