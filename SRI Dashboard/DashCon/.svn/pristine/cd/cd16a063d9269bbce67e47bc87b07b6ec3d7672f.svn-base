// IMPORTS

	// Load variables first of course..
	@import "variables.less";

	@import "top-navigation.less";
	
	@import "sidebar.less";
	
	@import "main-content.less";
	
	//GENERAL/UTILITY STYLES
	//@import "general.less"

	// HIGH PRIORITY IMPORTED LAST
	@import "sticky-footer.less";

/****************************

	general.less
	
	These are rules that are general which means
	it can be used in many cases.
	
	author: Robert Roth

****************************/
	
// mixin for setting full height 100%
.FullHeight {
	min-height: 100% !important;
	max-height: 100% !important;
	height: 100% !important;
}

// VARIABLES FOR THIS LESS
// NONE
	
	
#main {

	.FullHeight;
	font-family: @main-font-family;
	padding-top: 50px;
	overflow: auto;
	
	#sideBar, #mainContent {
		.FullHeight;
		overflow: auto;
	}
	
	.back-to-top-button {
		position: absolute;
		font-size: 3em;
		top: auto;
		left: auto;
		right: 50px;
		bottom: 50px;
		opacity: .5;
		cursor: default;
		
		&:hover {
			opacity: 1;
		}
	}
}


#footer {
	background: darken(@nav-color, 10%);
	color: @nav-font-color;
	border-top: solid 1px darken(@nav-color, 15%);
	padding-top: 10px;
	
	p {
		margin-bottom: 0;
		
		a {
			color: darken(@nav-font-color, 10%);
			
			&:hover {
				color: @nav-font-color;
				text-decoration: none;
			}
		}
		
	}
}
