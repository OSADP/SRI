<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<meta name="author" content="www.leidos.com">
		<meta name="description" content="Smart Roadside Initiative user profile page.">

		<title>SRI Administration</title>

		<link rel="stylesheet" href="../vendor/animate/animate.css">
		<link rel="stylesheet" href="../vendor/font-awesome/css/font-awesome.css">
		<link rel="stylesheet" href="../styles/admin.css">
		<link rel="stylesheet" href="./css/main.css">
		
		<link rel="icon" type="image/png" href="../images/favicon.png" />
		
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular.js" type="text/javascript"></script>
		<script type="text/javascript">
		//<![CDATA[
		(window.angular)||document.write('<script type="text/javascript" src="vendor/angular/angular.js"><\/script>');//]]>
		</script>
		<!-- // -->
		
	</head>
	
	<body ng-app="app:profile">
		<!-- BEGIN TOP NAVIGATION -->
		<section ng-include="'./includes/NavigationPrtl.html'"></section>
		<div class="stage">
		
			<div class="container">
				<div ng-controller="UserProfileCtrl as profile" ng-cloak>
					<notifyr></notifyr>
					
					<h1 class="header-text">Access</h1>
					<hr />
						
					<section class="row">
						<div class="col-lg-2">
							<a href="/DashCon/dashboard" class="module-icon" ng-material>
								<img src="./img/dashboard-icon.svg" alt="Dashboard Icon" />
								<p>Open Dashboard</p>
							</a>
						</div>
						<div class="col-lg-2"
							ng-if="profile.user.userGroup.groupId == 'admin'">
							<a href="/DashCon/admin" class="module-icon" ng-material>
								<img src="./img/admin-icon.svg" alt="Dashboard Icon" />
								<p>Administration</p>
							</a>
						</div>
					</section>
					
					<h1 class="header-text">Profile</h1>
					<hr />
					
					<h2 class="header-text">{{ profile.user.userId }}</h2>
					
					<section ng-include="'./includes/UserControlsPrtl.html'"></section>
					
					<section class="row">
						<form class="form col-xs-12 col-md-6 col-lg-4" ng-submit="profile.updateEmail()">
							
							<div ng-show="profile.menu.active == 'name'">
								<div class="form-group">
									<label for="firstName">First Name:</label>
									<input type="text" id="firstName" class="form-control" ng-model="profile.user.firstName" />
								</div>
								<div class="form-group">
									<label for="lastName">Last Name:</label>
									<input type="text" id="lastName" class="form-control" ng-model="profile.user.lastName" />
								</div>
							</div>
							
							<div ng-show="profile.menu.active == 'email'">
								<div class="form-group">
									<label for="email">Email:</label>
									<input type="text" id="" class="form-control" ng-model="profile.user.email" />
								</div>
								<div class="form-group">
									<label for="email">Confirm Email:</label>
									<input type="text" id="" class="form-control" ng-model="profile.confirmEmail" />
								</div>
							</div>
						
							<div ng-show="profile.menu.active == 'password' || profile.menu.active == 'username'">
								<p>*Not yet implemented*</p>		
							</div>
							
							<div class="form-group">
								<button class="btn btn-primary" type="Submit">
									<span class="glyphicon glyphicon-ok-sign"></span>
									Update
								</button>
								<button class="btn btn-default" type="button" 
									ng-click="profile.reset()">
									<span class="glyphicon glyphicon-refresh"></span>
									Reset
								</button>
							</div>
							
						</form>
					</section>
					
				</div>
				<!-- // UserProfileCtrl -->
				
				
				<!-- THIS WILL BE THE CONTAINER FOR OUR VIEWS -->
<!-- 				<div id="mainContainer" ui-view>						 -->
<!-- 					THIS OUR LOADER IMAGE -->
<!-- 					<div id="ajaxLoader" ng-hide="loaderShow"> -->
<!-- 						<img src="../images/bar-loader.gif" id="" class="pull-right" alt="loader" /> -->
<!-- 					</div> -->
<!-- 					/// -->
<!-- 				</div> -->
				<!-- /// -->
			</div>
			
		</div>
		
		<!-- FOOTER -->
		<div ng-include="'./includes/FooterPrtl.html'"></div>
		<!-- // -->
		
		<!-- JS DEPENDENCIES -->
		<!-- <script src="vendor/angular-ui-router/angular-ui-router.js"></script> -->
		<script src="../vendor/jquery/jquery-1.11.0.js"></script>
		<script src="../vendor/bootstrap/custom/js/bootstrap.js"></script>
		<!-- // -->
		<!-- CONTROLLERS -->
		<script src="./js/controllers/UserProfileCtrl.js"></script>
		<!-- // -->
		<!-- SERVICES -->
		<script src="./js/services/UserFactory.js"></script>
		<script src="./js/services/SiteFactory.js"></script>
		<script src="./js/directives/Notifyr.js"></script>
		<script src="./js/directives/MaterialEffect.js"></script>
		<!-- // -->
		<!-- CONFIGURATIONS & ROUTES -->
		<!-- <script src="./js/configs/UserRouteConfig.js"></script> -->
		<script src="./js/app.js"></script>
		<!-- // -->
	</body>
	
</html>