
	
<div class="col-xs-12 module-wrapper" id="saferLookupModule" ng-controller="SaferLookupCTRL as sfr">
	
	<div class="module-box">

		<div class="box-header clearfix">

			<div id="btnRefresh" class="btn-clipboard unbutton pull-left" title="Refresh">
				<span class="glyphicon glyphicon-refresh" ng-class="{'rotating': saferLookup.loading}"></span>
			</div>
			
			<button id="btnSettings" class="btn btn-sm btn-clipboard pull-right" title="Settings">
				<span class="fa fa-bars"></span>
			</button>
		
			<h4>SAFER Lookup</h4>

		</div>
			
		<div class="loading-bar" ng-class="{ 'loading': saferLookup.loading }"></div>
		
		<div class="well">
			<form class="form-group" name="saferForm" novalidation ng-submit="saferLookup.searchSafer()">
<!-- 				<label for="saferLookup">Enter US DOT Number:</label> -->
				<input type="text" class="form-control" ng-model="saferLookup.usdotNumber" placeholder="Enter US DOT Number"/>
				
								
<!-- 				<button class="btn btn-lg btn-left btn-danger" type="button" -->
<!-- 					ng-show="truck.current.hasUSDOT && truck.current.usdotNumber == saferLookup.usdotNumber" -->
<!-- 					ng-click="saferLookup"> -->
<!-- 					<span class="fa fa-trash"></span> -->
<!-- 					Delete -->
<!-- 				</button> -->
				
				<button class="btn btn-lg btn-left btn-success" type="submit"
					ng-show="saferLookup.hasUSDOT == false">
					<span class="fa fa-search"></span>
					Search
				</button>
								
				<button class="btn btn-lg btn-left btn-success" type="button"
					ng-show="saferLookup.hasUSDOT"
					ng-click="saferLookup.saveUSDOTNumber()"
					ng-class="{'disabled': truck.current.usdotNumber != undefined && saferLookup.usdotNumber == truck.current.usdotNumber }" 
					>
<!-- 					-->
					<span class="fa fa-save"></span>
					Save
				</button>
				
				<button type="button" class="btn btn-lg btn-right btn-primary" ng-click="saferLookup.clearInput($event)" 
					ng-class="{'disabled': truck.current.hasPhone }">
					<span class="fa fa-remove"></span>
					Clear
				</button>
				
			</form>
		</div>
		
	</div>
	
</div>