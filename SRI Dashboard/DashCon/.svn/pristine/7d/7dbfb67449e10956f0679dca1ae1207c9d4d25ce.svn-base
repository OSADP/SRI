
<!-- THIS OUR LOADER IMAGE -->
<div id="ajaxLoader" ng-hide="loaderShow">
	<img src="/DashCon/images/bar-loader.gif" id="" class="pull-right" alt="loader" />
</div>
<!-- /// -->


<h1>{{ title }}</h1>

<a ui-sref="createUser()" class="btn btn-small btn-primary">
	<span class="glyphicon glyphicon-plus-sign"></span>	
	New User
</a>

<p></p>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Username</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th class="hidden-xs hidden-sm">Email</th>
			<th>State</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<tr ng-repeat="user in users">
			<td>{{ user.userId }}</td>
			<td>{{ user.firstName }}</td>
			<td>{{ user.lastName }}</td>
			<td class="hidden-xs hidden-sm">{{ user.email }}</td>
			<td>{{ user.state.stateName }}</td>
			<td>
				<a ui-sref="editUser({ userId: user.userId })" class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-pencil" title="Edit"></span></a>
				<button class="btn btn-xs btn-danger" id="delete" title="Delete"
					ng-click="deleteUser()">
					<span class="glyphicon glyphicon-trash"></span>
				</button>
			</td>
		</tr>
	</tbody>
</table>

<p ng-show="noUsers" class="text-danger">There are no Users in the database.</p>