// VARIABLES FOR THIS LESS & FOR FOOTER
@nav-color: #2f4048;
@nav-font-color: #bdc3c7;
	
.navbar.navbar-inverse {
	background-color: @nav-color;
	border-bottom-color: darken(@nav-color, 15%);

	.navbar-brand {
		color: lighten(#bdc3c7, 10%);
	}

	.dropdown, .dropdown-toggle {
		background: @nav-color;
	}
	
	li > a {
		color: @nav-font-color;
	}
	
	ul.dropdown-menu {
		background: @nav-color;
		border-color: darken(@nav-color, 15%);
		
		li > a {
		
			&:hover {
				background: darken(@nav-color, 5%);
			}
		}
	}
}