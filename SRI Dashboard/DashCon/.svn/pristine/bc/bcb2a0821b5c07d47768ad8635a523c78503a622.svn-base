<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sri.VendorMapper">

	<resultMap id="VendorMapper" type="Vendor">
		<id property="vendorName" column="VENDOR_NAME"/>
		<result property="vendorId" column="VENDOR_ID"/>
	</resultMap>
	
	<select id="getVendors" resultMap="VendorMapper" resultType="Vendor">
		SELECT VENDOR_NAME, VENDOR_ID
		FROM VENDOR
	</select>

	<select id="getVendorByName" resultMap="VendorMapper">
		SELECT
		VENDOR_NAME, VENDOR_ID
		FROM VENDOR
		WHERE VENDOR_NAME = #{vendorName}
	</select>

	<select id="getVendorById" resultMap="VendorMapper">
		SELECT
		VENDOR_NAME, VENDOR_ID
		FROM VENDOR
		Where VENDOR_ID = #{vendorId}
	</select>
	
</mapper>
