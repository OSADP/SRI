package sri.data.ws;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.UriBuilder;
import javax.ws.rs.core.UriInfo;

import sri.data.WeightReport;
import sri.data.safer.SaferUSDOTData;
import sri.safer.parser.SaferParser;

import com.sun.jersey.api.client.Client;
import com.sun.jersey.api.client.ClientResponse;
import com.sun.jersey.api.client.WebResource;
import com.sun.jersey.api.client.config.ClientConfig;
import com.sun.jersey.api.client.config.DefaultClientConfig;

@Path("/safer")
public class SaferResource {

	@Context
	protected UriInfo uriInfo;
	@Context
	protected HttpServletRequest req;
	@Context
	protected HttpServletResponse resp;
	
	@GET
	@Path("/{usDotNumber}")
	@Produces({MediaType.APPLICATION_JSON})
	public SaferUSDOTData getSaferData(@PathParam("usDotNumber") String usDotNumber) {
		SaferParser sp = new SaferParser();
		SaferUSDOTData safer = new SaferUSDOTData();;
		try {
			safer = sp.getSaferDataForUSDOT(usDotNumber);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return safer;
	}
}
