<script type="text/template" id="edit-site-template">
	<form action="" class="col-sm-12 col-md-6 col-lg-4">
		<div class="form-group">
			<label for="first_name">Site Name:</label>
			<input type="text" id="siteName" class="form-control" name="first_name" />
		</div>
		<div class="form-group">
			<label for="last_name">Site Type:</label>
			<input type="text" id="siteType" class="form-control" name="last_name" />
		</div>
		<div class="form-group">
			<label for="email">Description:</label>
			<input type="text" id="siteDescription" class="form-control" name="email" />
		</div>
		<button class="btn btn-sm btn-primary" id="submit" type="submit">
			<span class="glyphicon glyphicon-ok"></span>
			Save
		</button>
		<a href="#/" class="btn btn-sm btn-default" id="cancel">
			<span class="glyphicon glyphicon-remove"></span>
